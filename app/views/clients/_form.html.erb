
<%= form_for(@client, html: { multipart: true }) do |f| %>
  <% if @client.errors.any? %>
   

      <div id="error_explanation" class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h4>

      <ul>
      <% @client.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<section id="contact">
        <div class="container">
            <div class="row white">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Contact Us</h2>
                    <h3 class=" white section-subheading text-muted">Use the form below to drop us any queries and we will get back to you as soon as possible.</h3>

                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <form name="sentMessage" id="contactForm" novalidate>
                        <div class="row white">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <%= f.label :name %><br>
                                    <%= f.text_field :name, class: "form-control", placeholder: 'Your Name *' %>
                                </div>
                                <div class="form-group">
                                <%= f.label :email %><br>
                                    <%= f.text_field :email, class: "form-control", placeholder: 'Your Email *' %>
                                </div>
                                <div class="form-group">
                                     <%= f.label :tel %><br>
                                     <%= f.text_field :tel, class: "form-control", placeholder: 'Your Phone *' %>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <%= f.label :message %><br>
                                    <%= f.text_area :message, class: "form-control", placeholder: 'Your Message *' %>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-lg-12 text-center">
                                <div id="success"></div>
                                <%= f.submit :value => "send Message", class: "btn btn-primary" %>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </section>


   
<% end %>




